if playambience
{
	if !audio_is_playing(amb1)
	{
		audio_stop_sound(pamb1)
		pamb1 = audio_play_sound(amb1,1,0)
	}
	if !audio_is_playing(amb2)
	{
		audio_stop_sound(pamb2)
		pamb2 = audio_play_sound(amb2,1,0)
	}
	if !audio_is_playing(amb3)
	{
		audio_stop_sound(pamb3)
		pamb3 = audio_play_sound(amb3,1,0)
	}
	if !audio_is_playing(amb4)
	{
		audio_stop_sound(pamb4)
		pamb4 = audio_play_sound(amb4,1,0)
	}
}
else
{
	audio_stop_sound(pamb1)	
	audio_stop_sound(pamb2)
	audio_stop_sound(pamb3)	
	audio_stop_sound(pamb4)	
}
